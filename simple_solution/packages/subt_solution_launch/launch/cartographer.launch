<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<launch>
  <arg name="name" />
  <arg name="mode" default="3d"/>

  <env name="ROBOT_NAME" value="$(arg name)" />

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
      -configuration_directory $(find subt_solution_launch)/config/cartographer
      -configuration_basename cartographer_$(arg mode).lua"
      >

      <remap from="points2" to="/$(arg name)/points" />
      <remap from="imu" to="/$(arg name)/imu/data"/>
      <remap from="odom" to="/$(arg name)/odom"/>
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
    type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>
