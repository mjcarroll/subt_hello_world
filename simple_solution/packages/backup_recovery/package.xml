<?xml version="1.0"?>
<package format="2">
  <name>backup_recovery</name>
  <version>1.0.0</version>
  <description>
    Recovery behavior plugin for move_base that causes the platform
    to backup instead of rotating.
  </description>

  <author email="ashton@openrobotics.org">Ashton Larkin</author>
  <maintainer email="ashton@openrobotics.org">Ashton Larkin</maintainer>

  <license>Apache 2.0</license>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>base_local_planner</depend>
  <depend>costmap_2d</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_core</depend>
  <depend>pluginlib</depend>
  <depend>roscpp</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>

  <export>
    <nav_core plugin="${prefix}/backup_plugin.xml"/>
  </export>
</package>
